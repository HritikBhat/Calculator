<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242022"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <TextView
            android:id="@+id/Display"
            android:layout_width="309dp"
            android:layout_height="102dp"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:textColor="#F5EFF1"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/b_clear"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#D3D1D1"
            android:text="C"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b_open_brac"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#D3D1D1"
            android:text="("
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b_closed_brac"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="#D3D1D1"
            android:text=")"
            android:textStyle="bold" />

        <Button

            android:id="@+id/b_equal"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="#F19003"
            android:text="="
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/b7"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3F3641"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="7"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b8"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="#3F3641"
            android:text="8"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b9"
            android:layout_width="80sp"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:background="#3F3641"
            android:text="9"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b_div"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="#F19003"
            android:text="/"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/b4"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#3F3641"
            android:text="4"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b5"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="#3F3641"
            android:text="5"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b6"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_marginRight="40dp"
            android:background="#3F3641"
            android:text="6"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b_mul"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="#F19003"
            android:text="*"
            android:textAllCaps="false"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/b1"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#3F3641"
            android:text="1"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b2"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:background="#3F3641"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="2"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b3"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:background="#3F3641"
            android:text="3"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/b6"
            app:layout_constraintTop_toBottomOf="@+id/b6" />

        <Button
            android:id="@+id/b_add"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="#F19003"
            android:text="+"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/b0"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:background="#3F3641"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/b_dot"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="#3F3641"
            android:layout_weight="1"
            android:text="."
            android:textColor="#F5EFF1"
            android:textStyle="bold" />
        <Button
            android:id="@+id/b_back"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3F3641"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            android:layout_marginRight="0dp"
            android:text="Back"
            />
        <Button
            android:id="@+id/b_sub"
            android:layout_width="80sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:background="#F19003"
            android:text="-"
            android:textColor="#F5EFF1"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/b_dot"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>



</LinearLayout>